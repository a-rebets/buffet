    "typescript": "latest"
  },
  "dependencies": {
    "clsx": "latest",
    "effect": "latest",
    "svelte": "latest",
    "tailwindcss": "latest",
    "tailwind-merge": "latest",
    "tailwind-variants": "latest",
    "tw-animate-css": "latest"
  }
}
