{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // Path mappings
    "baseUrl": "..",
    "paths": {
      "@server/*": ["./server/*"]
    },

    // Stricter checks for server code
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedSideEffectImports": true,

    "types": ["bun-types"]
  },
  "include": ["../server/**/*", "../scripts/**/*", "../app.ts"]
}
